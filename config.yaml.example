# README PDF Reader Configuration
# Fill in your API keys below

# App Configuration
app:
  env: "development" # "development" | "production"
  debug: true
  host: "0.0.0.0"
  port: 5000

# OpenAI / LLM Configuration (全局默认凭证)
# 所有 LLM 服务默认使用此 API 凭证
openai:
  api_key: "your_api_key"
  api_base: "https://yunwu.ai/v1"

# Model Configuration (模型配置)
# 不同服务可以使用不同的模型，也可覆盖 API 凭证
#
# 简写 → 只指定模型名（使用全局 openai 凭证）:
#   chat: "qwen-plus"
#
# 详写 → 指定模型 + 独立 API 凭证:
#   translate:
#     model: "deepseek-chat"
#     api_key: "sk-other-key"
#     api_base: "https://api.deepseek.com/v1"
models:
  # 聊天/代理模型 - 用于学术助手对话
  chat: "qwen-plus"

  # 翻译模型 - 用于段落翻译
  translate: "qwen-plus"

  # 视觉模型 - 用于图片分析（需要支持视觉功能）
  vision: "gpt-4o-mini"

  # 嵌入模型 - 用于 RAG 向量嵌入
  embedding: "text-embedding-3-small"

  # 路线图模型 - 用于生成概念路线图
  roadmap: "qwen-plus"

# Scientific Literature APIs
scientific:
  semantic_scholar_api_key: ""
  semantic_scholar_api_url: "https://api.semanticscholar.org/graph/v1"

# Database Configuration (PostgreSQL)
database:
  url: "postgresql://user:password@db:5432/paper_agent_db"

# HTTP Proxy Configuration (Optional)
proxy:
  http: ""
  https: ""

# Tavily Search API (for web search tool)
tavily:
  api_key: "tvly-dev-..."

# 向量数据库配置
vector_store:
  enable_qdrant: true

  qdrant:
    url: "http://qdrant:6333"
    api_key: ""
    prefer_grpc: true

# Object Storage Configuration (Tencent COS)
cos:
  enabled: false # Set to true to enable Cloud Object Storage
  secret_id: "your-secret-id"
  secret_key: "your-secret-key"
  region: "ap-guangzhou" # e.g., ap-guangzhou, ap-shanghai
  bucket: "your-bucket-name-1250000000"
  scheme: "https"

# Celery 任务队列
celery:
  broker_url: "redis://redis:6379/0"
  result_backend: "redis://redis:6379/1"

# JWT 认证配置
jwt:
  # 生产环境务必修改为高强度随机字符串！
  secret: "your-jwt-secret-key-change-me-in-production"
  # Access Token 有效期（分钟）
  access_expire_minutes: 30
  # Refresh Token 有效期（天）
  refresh_expire_days: 7
