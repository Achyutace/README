# README PDF Reader Configuration
# Fill in your API keys below

# OpenAI / LLM Configuration
openai:
  api_key: "your_api_key"
  api_base: "https://yunwu.ai/v1"

# Translation Service
translate:
  api_key: "your_api_key"
  api_base: "https://yunwu.ai/v1"

# Tavily Search API
tavily:
  api_key: "your_api_key"

# Model Configuration (模型配置)
# Different services can use different models
# 不同服务可以使用不同的模型
models:
  # Chat/Agent model - for academic assistant conversations
  # 聊天/代理模型 - 用于学术助手对话
  chat: "qwen-plus"

  # Translation model - for paragraph translation
  # 翻译模型 - 用于段落翻译
  translate: "qwen-plus"

  # Vision model - for image analysis (requires vision capability)
  # 视觉模型 - 用于图片分析（需要支持视觉功能）
  vision: "gpt-4o-mini"

  # Embedding model - for RAG vector embeddings
  # 嵌入模型 - 用于RAG向量嵌入
  embedding: "text-embedding-3-small"

  # Roadmap model - for generating concept roadmaps
  # 路线图模型 - 用于生成概念路线图
  roadmap: "qwen-plus"
# Scientific Literature APIs
scientific:
  semantic_scholar_api_key: ""

# Database Configuration (PostgreSQL)
database:
  url: "postgresql://user:password@localhost:5432/paper_agent_db"

# HTTP Proxy Configuration (Optional)
proxy:
  http: ""
  https: ""

# Tavily Search API (for web search tool)
tavily:
  api_key: "tvly-dev-..."

# 向量数据库配置
vector_store:
  # 启用特定的向量存储
  enable_qdrant: true
  
  qdrant:
    url: "http://localhost:6333"
    api_key: ""
    prefer_grpc: true

# Celery 任务队列（Redis 与后端同机部署，只监听本机）
celery:
  broker_url: "redis://127.0.0.1:6379/0"
  result_backend: "redis://127.0.0.1:6379/1"

# JWT 认证配置
jwt:
  # 生产环境务必修改为高强度随机字符串！
  secret: "your-jwt-secret-key-change-me-in-production"
  # Access Token 有效期（分钟）
  access_expire_minutes: 30
  # Refresh Token 有效期（天）
  refresh_expire_days: 7
