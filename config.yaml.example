# README PDF Reader 配置文件示例
# 复制此文件为 config.yaml 并填入你的 API Key

openai:
  # OpenRouter API Key (以 sk-or- 开头)
  api_key: "sk-or-v1-xxxxxxxxxxxxxxxx"
  # OpenRouter 的 API 地址
  api_base: "https://openrouter.ai/api/v1"
  # 选择模型 (OpenRouter 支持的模型列表: https://openrouter.ai/models)
  # 例如: openai/gpt-4o, anthropic/claude-3.5-sonnet, google/gemini-pro
  model: "openai/gpt-4o"

translate:
  # 翻译服务的 API Key (可选，如果用同一个服务可以填相同的)
  api_key: "sk-or-v1-xxxxxxxxxxxxxxxx"
  api_base: "https://openrouter.ai/api/v1"

tavily:
  # Tavily 搜索 API Key (可选，用于联网搜索功能)
  api_key: ""

# 向量数据库配置
vector_store:
  # 启用特定的向量存储
  enable_chroma: true
  enable_qdrant: true

  chroma:
    path: "./storage/chroma_db"
  
  qdrant:
    url: "http://localhost:6333"
    api_key: ""
    prefer_grpc: true
